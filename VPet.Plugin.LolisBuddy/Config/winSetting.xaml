<Window x:Class="VPet.Plugin.LolisBuddy.winSetting" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:ll="clr-namespace:LinePutScript.Localization.WPF;assembly=LinePutScript.Localization.WPF"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VPet.Plugin.LolisBuddy"
        xmlns:pu="clr-namespace:Panuon.WPF.UI;assembly=Panuon.WPF.UI"
        mc:Ignorable="d"
        Title="LolisBuddy Settings" 
        Height="300" Width="400" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">
        

    <Window.Resources>
        <ResourceDictionary Source="/VPet-Simulator.Windows.Interface;component/ResourceStyle.xaml" />
    </Window.Resources>



    <TabControl pu:TabControlHelper.CanHeaderPanelScroll="True" pu:TabControlHelper.ItemsCornerRadius="4"
                pu:TabControlHelper.ItemsHeight="NaN"
                pu:TabControlHelper.ItemsHoverBackground="{DynamicResource PrimaryLight}"
                pu:TabControlHelper.ItemsPadding="10,7"
                pu:TabControlHelper.ItemsSelectedBackground="{DynamicResource PrimaryDark}"
                pu:TabControlHelper.ItemsSelectedForeground="{DynamicResource DARKPrimaryText}" Background="Transparent"
                BorderThickness="0" Foreground="{DynamicResource PrimaryText}" Margin="5,5,5,0">

        <TabItem Header="Game" x:Name="GameTab" IsSelected="True">
            
            <Grid Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>



                <!-- Interval -->
                <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="Interval:" Grid.Row="0" ToolTip="1000 = 1 second"/>
                <TextBox Style="{StaticResource StandardTextBoxStyle}" Text="{Binding DelayTimer, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="0" HorizontalAlignment="Right" Width="120" Margin="0,0,50,0"/>

                <!-- Speech Delay -->
                <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="Speech Delay:" Grid.Row="2" ToolTip="1000 = 1 second"/>
                <TextBox Style="{StaticResource StandardTextBoxStyle}" Text="{Binding DelayTalk, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="2" HorizontalAlignment="Right" Width="120" Margin="0,0,50,0"/>

                <!-- Speech Chance (Slider + Value) -->
                <TextBlock  Foreground="{DynamicResource DARKPrimary}" Text="Speech Chance:" Grid.Row="4"/>
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Slider Style="{StaticResource StandardSliderStyle}" Minimum="0" Maximum="100" Width="120" Margin="0,0,0,0"
                                Value="{Binding ChanceTalk, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="{Binding ChanceTalk}" Width="50" TextAlignment="Center"/>
                </StackPanel>

                <!-- Enable Debug -->
                <CheckBox Style="{StaticResource ThemedCheckBoxStyle}" Content="Enable Debug" IsChecked="{Binding Debug}" Grid.Row="6"
                              VerticalAlignment="Bottom" Margin="30,10,0,10" HorizontalAlignment="Left" />
                <CheckBox Style="{StaticResource ThemedCheckBoxStyle}" Content="Enable Sound" IsChecked="{Binding SoundEffect}" Grid.Row="6"
                              VerticalAlignment="Bottom" Margin="0,10,30,10" HorizontalAlignment="Right"/>

                <!-- Save Button -->
                <Button Style="{StaticResource ThemedButtonStyle}" Content="Save Settings" Grid.Row="8" HorizontalAlignment="Center"
                            Click="SaveButton_Click" Margin="0,0,0,40" Grid.RowSpan="2" />
            </Grid>
        </TabItem>


        <TabItem Header="{ll:Str 'LolisBuddy'}" x:Name="LolisBuddyTab">
            <Grid Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
          

                </Grid.RowDefinitions>





                <!-- Interval -->
                <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="Interval:" Grid.Row="0" ToolTip="1000 = 1 second"/>
                <TextBox Style="{StaticResource StandardTextBoxStyle}" Text="{Binding DelayTimer, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="0" HorizontalAlignment="Right" Width="120" Margin="0,0,50,0"/>

                <!-- Speech Delay -->
                <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="Speech Delay:" Grid.Row="2" ToolTip="1000 = 1 second"/>
                <TextBox Style="{StaticResource StandardTextBoxStyle}" Text="{Binding DelayTalk, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="2" HorizontalAlignment="Right" Width="120" Margin="0,0,50,0"/>

                <!-- Speech Chance (Slider + Value) -->
                <TextBlock  Foreground="{DynamicResource DARKPrimary}" Text="Speech Chance:" Grid.Row="4"/>
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Slider Style="{StaticResource StandardSliderStyle}" Minimum="0" Maximum="100" Width="120" Margin="0,0,0,0"
                                Value="{Binding ChanceTalk, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="{Binding ChanceTalk}" Width="50" TextAlignment="Center"/>
                </StackPanel>


                <!-- Save Button -->
                <Button Style="{StaticResource ThemedButtonStyle}" Content="Save Settings" Grid.Row="8" HorizontalAlignment="Center"
                            Click="SaveButton_Click" Margin="0,0,0,40" Grid.RowSpan="2" />
            </Grid>
            
        </TabItem>

        <TabItem Header="Learning" x:Name="LearningTab">
            <Grid Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>



                <TextBlock  Foreground="{DynamicResource DARKPrimary}" Text="Learning Speed:" Grid.Row="0" ToolTip="1 tick = 6 seconds"/>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Slider Style="{StaticResource StandardSliderStyle}" Minimum="1" Maximum="400" Width="120" Margin="0,0,0,0"
                               Value="{Binding LearningSpeed, UpdateSourceTrigger=PropertyChanged}" SmallChange="1"/>
                    <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="{Binding LearningSpeed}" Width="50" TextAlignment="Center"/>
                </StackPanel>

                <TextBlock  Foreground="{DynamicResource DARKPrimary}" Text="Learning Rate:" Grid.Row="2" ToolTip="1 tick = 0.0001%"/>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Slider Style="{StaticResource StandardSliderStyle}" Minimum="0" Maximum="10000" Width="120" Margin="0,0,0,0"
                                Value="{Binding LearningRate, UpdateSourceTrigger=PropertyChanged}" SmallChange="1"/>
                    <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="{Binding LearningRate}" Width="50" TextAlignment="Center"/>
                </StackPanel>

                <TextBlock  Foreground="{DynamicResource DARKPrimary}" Text="Decay Rate:" Grid.Row="4" ToolTip="1 tick = 0.0001%" />
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Slider Style="{StaticResource StandardSliderStyle}" Minimum="0" Maximum="10000" Width="120" Margin="0,0,0,0"
                     Value="{Binding BaseDecayRate, UpdateSourceTrigger=PropertyChanged}" SmallChange="1"/>
                    <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="{Binding BaseDecayRate}" Width="50" TextAlignment="Center"/>
                </StackPanel>

                <TextBlock  Foreground="{DynamicResource DARKPrimary}" Text="Overindulgence Penalty:" Grid.Row="6" ToolTip="1 tick = 0.0001%"/>
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Slider Style="{StaticResource StandardSliderStyle}" Minimum="0" Maximum="10000" Width="120" Margin="0,0,0,0"
                     Value="{Binding OverindulgencePenalty, UpdateSourceTrigger=PropertyChanged}" SmallChange="1"/>
                    <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="{Binding OverindulgencePenalty}" Width="50" TextAlignment="Center"/>
                </StackPanel>

                <TextBlock  Foreground="{DynamicResource DARKPrimary}" Text="Craving Boost:" Grid.Row="8" ToolTip="1 tick = 0.0001%"/>
                <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Slider Style="{StaticResource StandardSliderStyle}" Minimum="0" Maximum="10000" Width="120" Margin="0,0,0,0"
                     Value="{Binding CravingBoost, UpdateSourceTrigger=PropertyChanged}" SmallChange="1"/>
                    <TextBlock Foreground="{DynamicResource DARKPrimary}" Text="{Binding CravingBoost}" Width="50" TextAlignment="Center"/>
                </StackPanel>


                <!-- Save Button -->
                <Button Style="{StaticResource ThemedButtonStyle}" Content="Save Settings" Grid.Row="10" HorizontalAlignment="Center"
                Click="SaveButton_Click" Margin="0,0,0,40" Grid.RowSpan="2" />
            </Grid>
        </TabItem>



    </TabControl>
    
</Window>
